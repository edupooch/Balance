<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="br.edu.ufcspa.balance.controle.avaliacao.GraficoActivity"
    tools:showIn="@layout/activity_grafico">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/round_edge_cinza"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="4dp">

            <com.androidplot.xy.XYPlot
                android:id="@+id/android_plot"
                style="@style/APDefacto.Light"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:borderColor="@color/off_white"
                app:borderThickness="3dp"
                app:domainLineColor="#d4d4d4"
                app:domainLineThickness="1px"
                app:domainOriginLineColor="#d4d4d4"
                app:domainOriginLineThickness="1dp"
                app:gridBackgroundColor="@color/off_white"
                app:legendVisible="false"
                app:lineLabelRotationBottom="-45"
                app:lineLabelTextColorBottom="@color/textColor"
                app:lineLabelTextColorLeft="@color/textColor"
                app:lineLabelTextSizeBottom="14sp"
                app:lineLabelTextSizeLeft="14sp"
                app:lineLabels="left|bottom"
                app:paddingLeft="2dp"
                app:paddingRight="10dp"
                app:pieBorderThickness="0dp"
                app:rangeLineColor="#d4d4d4"
                app:rangeLineThickness="1px"
                app:rangeOriginLineColor="#d4d4d4"
                app:rangeOriginLineThickness="1dp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/escala_em_centimetros"
            android:textAlignment="center" />
    </LinearLayout>
</LinearLayout>
